<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Account__c</field>
        <field>CarryOutDate__c</field>
        <field>PriceTableType__c</field>
        <field>ServiceFee__c</field>
        <field>CargoInsuranceCost__c</field>
        <field>Status__c</field>
        <field>Active__c</field>
        <field>CanInvoiceActualCostFlag__c</field>
        <field>CanPayActualCostFlag__c</field>
        <field>Subcontractor1__c</field>
        <field>SubcontractorReductionFee__c</field>
        <field>Memo__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>y.sano@mfj.biz</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>副社長承認</label>
        <name>VicePresidentApproval</name>
    </approvalStep>
    <description>価格管理の承認プロセスです。</description>
    <emailTemplate>MFJEmailTemplate/PriceTableApprovalRequest</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>PriceTable__c.Status__c</field>
            <operation>equals</operation>
            <value>Draft,Revising</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>PriceTableFinalApprovalAlert</name>
            <type>Alert</type>
        </action>
        <action>
            <name>UpdatePriceTableStatusApproved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>PriceTableFinalRejectionAlert</name>
            <type>Alert</type>
        </action>
        <action>
            <name>UpdatePriceTableStatusRejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>UpdatePriceTableStatusPendingApproval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>価格管理申請</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
