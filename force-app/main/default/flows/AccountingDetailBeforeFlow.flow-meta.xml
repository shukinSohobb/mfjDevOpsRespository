        <assignmentItems>
            <assignToReference>$Record.ClosingDate__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>closingDateFormula</elementReference>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>$Record.ReportNonTaxable__c</assignToReference>
