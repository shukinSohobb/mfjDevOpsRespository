            </value>
        </assignmentItems>
    </assignments>
    <decisions>
        <name>decisionTaxChange</name>
        <label>「消費税率」の変更を判定</label>
        <locationX>182</locationX>
        <locationY>287</locationY>
        <defaultConnector>
            <targetReference>SetValues</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>存在</defaultConnectorLabel>
        <rules>
            <name>isBlank</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.ConsumptionTaxRate__c</leftValueReference>
                <operator>IsBlank</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>getTaxMeta</targetReference>
            </connector>
            <label>空白</label>
        </rules>
    </decisions>
    <environments>Default</environments>
    <formulas>
        <name>closingDateFormula</name>
        <dataType>Date</dataType>
        <expression>IF(
    NOT(ISBLANK({!$Record.InvoiceAccount__c})),
    (
        IF(
            OR(
                ISPICKVAL({!$Record.InvoiceAccount__r.ClosingDate__c}, &quot;Month_End&quot;),
                ISPICKVAL({!$Record.InvoiceAccount__r.ClosingDate__c}, &quot;Irregular&quot;)
            ),
            DATE(YEAR({!$Record.Date__c}), MONTH({!$Record.Date__c}), DAY(ADDMONTHS(DATE(YEAR({!$Record.Date__c}), MONTH({!$Record.Date__c}), 1), 1) - 1)),
            IF(
                DAY({!$Record.Date__c}) &lt;= VALUE(RIGHT(TEXT({!$Record.InvoiceAccount__r.ClosingDate__c}), 2)),
                DATE(YEAR({!$Record.Date__c}), MONTH({!$Record.Date__c}), VALUE(RIGHT(TEXT({!$Record.InvoiceAccount__r.ClosingDate__c}), 2))),
                ADDMONTHS(DATE(YEAR({!$Record.Date__c}), MONTH({!$Record.Date__c}), VALUE(RIGHT(TEXT({!$Record.InvoiceAccount__r.ClosingDate__c}), 2))), 1)
            )
        )
    ),
    NULL
)</expression>
    </formulas>
    <formulas>
        <name>NontaxableAmount</name>
        <dataType>Currency</dataType>
        <expression>IF(
ISBLANK({!$Record.ConsumptionTaxRate__c}) || {!$Record.ConsumptionTaxRate__c} = 0,
{!$Record.Amount__c},
NULL
)</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>TaxableAmount</name>
        <dataType>Currency</dataType>
        <expression>IF(
ISBLANK({!$Record.ConsumptionTaxRate__c}) || {!$Record.ConsumptionTaxRate__c} = 0,
NULL,
{!$Record.Amount__c}
)</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>TaxRate_F</name>
        <dataType>Number</dataType>
        <expression>CASE(
    {!$Record.AccountItem__c},
    &apos;1_90&apos;, VALUE({!TaxRateNormal}),
    &apos;1_91&apos;, VALUE({!TaxRateReduced}),
    &apos;1_92&apos;, 0,
    &apos;2_90&apos;, VALUE({!TaxRateNormal}),
    &apos;2_91&apos;, VALUE({!TaxRateReduced}),
    &apos;2_92&apos;, 0,
   Null
)</expression>
        <scale>0</scale>
    </formulas>
    <interviewLabel>請求・支払明細の高速フロー {!$Flow.CurrentDateTime}</interviewLabel>
    <label>請求・支払明細の高速フロー</label>
