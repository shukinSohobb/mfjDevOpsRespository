        <locationX>50</locationX>
        <locationY>503</locationY>
        <assignmentItems>
            <assignToReference>$Record.ConsumptionTaxRate__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>TaxRate_F</elementReference>
