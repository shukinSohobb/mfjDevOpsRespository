<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CannotUpdateAfterInvoicConfirmed</fullName>
    <active>true</active>
    <description>請求書の「状態：処理済み」の場合、「請求・支払明細」は変更できません。</description>
    <errorConditionFormula>NOT( ISNEW() )
&amp;&amp;
ISPICKVAL(InvoiceDocument__r.Status__c, &apos;Confirmed&apos;)</errorConditionFormula>
    <errorMessage>請求書の「状態：処理済み」の場合、「請求・支払明細」は変更できません。</errorMessage>
</ValidationRule>
